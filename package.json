{
    "name": "@reuben-raj/poc-cdk-constructs",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc && npm run copy-files",
        "test": "jest",
        "lint": "eslint .",
        "prettier": "prettier .",
        "prettier-ci": "prettier --check **/*.ts",
        "test-coverage": "jest --coverage",
        "test-watch": "jest --watch",
        "test-path": "jest --testPathPattern",
        "semantic-release": "semantic-release",
        "copy-files": "copyfiles -u 1 src/**/*.{html,hbs,svg} dist/"
    },
    "files": [
        "dist/"
    ],
    "author": "Reuben",
    "license": "ISC",
    "dependencies": {
        "@aws-lambda-powertools/logger": "^1.18.0",
        "@reuben-raj/poc-cdk-constructs": "file:",
        "aws-cdk-lib": "^2.124.0",
        "constructs": "^10.3.0",
        "datadog-cdk-constructs-v2": "^1.7.4",
        "handlebars": "^4.7.8"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@tsconfig/node20": "^20.1.3",
        "@types/aws-lambda": "^8.10.133",
        "@types/handlebars": "^4.1.0",
        "@types/jest": "^29.5.12",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "aws-cdk": "^2.124.0",
        "copyfiles": "^2.4.1",
        "esbuild": "^0.21.5",
        "eslint": "8.4.1",
        "eslint-config-prettier": "^8.10.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "7.00.4",
        "jest": "^29.7.0",
        "jest-mock-extended": "^3.0.5",
        "lint-staged": "12.1.2",
        "prettier": "^2.8.8",
        "semantic-release": "^21.1.1",
        "ts-jest": "^29.1.2",
        "typescript": "^5.4.3"
    },
    "lint-staged": {
        "*.ts": "eslint --cache --fix"
    },
    "repository": {
        "url": "git://github.com:reuben-raj/poc-cdk-constructs.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "release": {
        "branches": [
            "main",
            {
                "name": "beta",
                "prerelease": true
            },
            {
                "name": "alpha",
                "prerelease": true
            }
        ],
        "tagFormat": "v${version}",
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            "@semantic-release/npm",
            [
                "@semantic-release/github",
                {
                    "failComment": false,
                    "failTitle": false
                }
            ],
            "@semantic-release/git"
        ],
        "repositoryUrl": "https://github.com/reuben-raj/poc-cdk-constructs.git"
    }
}
