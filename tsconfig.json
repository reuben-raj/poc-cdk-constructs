{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "lib": ["es2023", "DOM"],
        "declaration": true,
        "outDir": "dist",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["test/**/*.test.ts"]
}
